<% title "Members" %>

<div data-role = "content">
<ul data-role  = "listview">
<% @members.each do |member| %>

	<li data-role = "list-divider"><%= member.name %> </li>
	<li>
		<%= link_to admin_member_path(member)  do %>
			<h3>Member Information</h3>
			<p><%= member.card %></p>
			<p><%= member.email %></p>
			<% if member.registered? %>
				<p class="ui-li-aside">Registered: <%= member.reg_date %></p>
			<% end %>
			<div data-role="controlgroup" data-type="horizontal">
				<%= link_to 'Edit', edit_admin_member_path(member), "data-role" => "button", "data-icon" => "gear" %>
				<%= link_to 'Destroy', admin_member_path(member), :method => :delete, "data-role" => "button", "data-icon" => "delete" %>
			</div>
			
		<% end %>
	</li>


<% end %>
</ul>
</div>
<br />

<%= link_to 'New Member', new_admin_member_path, "data-role" => "button", "data-icon" => "plus" %>
