<% title "New member" %>


<div data-role="content">
	<%= form_for :memberandprod, :url => admin_members_path do |form| %>
		<% if @member.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

				<ul>
					<% @member.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<%= form.fields_for @member do |f| %>

			<div class="field">
				<%= f.label :name %><br />
				<%= f.text_field :name %>
			</div>
			<div class="field">
				<%= f.label :card %><br />
				<%= f.text_field :card %>
			</div>
			
			<div class="field">
				<%= f.label :email %><br />
				<%= f.text_field :email %>
			</div>
			
			
		<% end %>
		<div data-role="fieldcontains">
		    <fieldset data-role="controlgroup">
		    	<legend>Store:</legend>
				<%= select_tag( :store, options_for_select(Store.all.map{|s| [s.name, s.id]}) )%>
			</fieldset>
		</div>


		<div data-role="fieldcontains">
			<h3>Add Product Offers</h3>
			<fieldset data-role="controlgroup">
				<%= form.fields_for :products do |f| %>
					<% Product.all.each do |prod| %>
						<p>
							<%= f.check_box prod.id, "type" => "checkbox" -%> 
							<%= f.label prod.id, prod.name -%>
						</p>
					<% end %>
	
				<% end %>
			</fieldset>
		</div>

		<div class="actions">
			<%= form.submit "create member" %>
		</div>
	<% end %>

</div>

<%= link_to 'Member List', admin_members_path, "data-role" => "button", "data-icon" => "back" %>
